@using PackerTracker.Models;

<h1>Packing List</h1>

@if (Model.Count == 0)
{
  <p>There are no items in the packing list.</p>
}

<ul>
  <form action="/items/checked" method="post">
    @foreach (Item item in Model)
    {
      <li>
        <label><a href='items/@item.Id'>@item.Description</label>
        <input type="checkbox" name="itemIds" value="@item.Id">
      </li>
    }
    <button type="submit">Submit</button>
  </form>
</ul>


<a href="/items/new">Add a new item.</a>

<form action="/items/delete" method="post">
  <button type="submit" name="button">Clear All items</button>
</form>